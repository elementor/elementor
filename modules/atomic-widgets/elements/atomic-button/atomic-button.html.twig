{% set tag = settings.link.href ? 'a' : 'button' %}
{% set classes = settings.classes | merge( [ base_styles.base ] ) | join(' ') %}
{% set text = settings.text %}
{% set linkTarget = settings.link.href and settings.link.target == '_blank' ? ' target="_blank"' : '' %}
{% set linkAttributes = settings.link.href ? ' href="' ~ settings.link.href | e('full_url') ~ '"' ~ linkTarget : '' %}

<{{ tag }}{{ linkAttributes }} class="{{ classes }}">
    {{ text }}
</{{ tag }}>