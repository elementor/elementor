{% if settings.title is not empty %}
	{% set id_attribute = settings.cssid.id is not empty ? 'id="' ~ settings.cssid.id | e('html_attr') ~ '"' : '' %}
	<{{ settings.tag | e('html_tag') }} class="{{ settings.classes | merge( [ base_styles.base ] ) | join(' ') }}" {{ id_attribute }}>
	{% if settings.link.href %}
		<a href="{{ settings.link.href | e('full_url') }}" target="{{ settings.link.target }}">
			{{ settings.title }}
		</a>
	{% else %}
		{{ settings.title }}
	{% endif %}
	</{{ settings.tag | e('html_tag') }}>
{% endif %}
