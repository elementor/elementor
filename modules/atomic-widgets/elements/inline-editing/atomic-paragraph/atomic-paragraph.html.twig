{% set paragraph_content = settings.inline_html.content is defined ? settings.inline_html.content : settings.inline_html %}
{% set tags_list = allowed_tags is defined ? allowed_tags : '<b><strong><sup><sub><s><em><u><ul><ol><li><blockquote><a><del><span><br>' %}

{% if paragraph_content is not empty %}
	{% set id_attribute = settings._cssid is not empty ? 'id=' ~ settings._cssid | e('html_attr') : '' %}
	<{{ settings.tag | e('html_tag') }} class="{{ settings.classes | merge( [ base_styles.base ] ) | join(' ') }}" data-interaction-id="{{ id }}" {{ id_attribute }} {{ settings.attributes | raw }}>
		{% if settings.link.href %}
			<{{ settings.link.tag | e('html_tag') }}
				{% set linkAttr = settings.link.tag == 'a' ? 'href' : 'data-action-link' %}
				{{ linkAttr }}="{{ settings.link.href | raw }}"
				target="{{ settings.link.target }}"
				class="{{ base_styles['link-base'] }}"
			><!-- elementor-children-placeholder --></{{ settings.link.tag | e('html_tag') }}>
		{% else %}
			<!-- elementor-children-placeholder -->
		{% endif %}
	</{{ settings.tag | e('html_tag') }}>
{% endif %}
