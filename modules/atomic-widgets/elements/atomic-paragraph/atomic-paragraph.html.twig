{% if settings.paragraph is not empty %}
		{% set id_attribute = settings.cssid is not empty ? 'id=' ~ settings.cssid | e('html_attr') : '' %}
        <p class="{{ settings.classes | merge( [ base_styles.base ] ) | join(' ') }}" {{ id_attribute }}>
            {% if settings.link.href %}
                <a href="{{ settings.link.href | e('full_url') }}" target="{{ settings.link.target }}" class="{{ base_styles['link-base'] }}">
                    {{ settings.paragraph }}
                </a>
            {% else %}
                {{ settings.paragraph }}
            {% endif %}
        </p>
{% endif %}
