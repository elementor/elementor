{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "jsx": "react",
    "moduleResolution": "Bundler",
    "esModuleInterop": false,
    "isolatedModules": true,
    "strict": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "@elementor/*": [
        "./packages/core/*/src",
        "./packages/libs/*/src",
        "./packages/tools/*/src",
        "./packages/apps/*/src"
      ],
      "test-utils": [
        "./tests/test-utils"
      ]
    },
  },
  "exclude": [
    "**/dist/**"
  ]
}
