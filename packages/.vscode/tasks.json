{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check Auto Run",
      "type": "shell",
      "command": "if [ \"${CURSOR_AUTO_RUN_TASKS:-true}\" = \"false\" ]; then echo '⚠️  Auto-run tasks are disabled. To enable them, set CURSOR_AUTO_RUN_TASKS=true in your environment.'; exit 1; fi",
    },
    {
      "label": "turbo-repo:dev",
      "dependsOrder": "sequence",
      "dependsOn": ["Check Auto Run"],
      "type": "npm",
      "script": "dev",
      "path": ".",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "group": "dev-servers",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true,
        "echo": true,
        "reveal": "always",
        "focus": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": [],
      "label": "turbo-repo:build",
      "detail": "Build all turbo-repo packages",
      "group": "build"
    },
    {
      "type": "shell",
      "command": "npm run build:tools",
      "problemMatcher": [],
      "label": "turbo-repo:build:tools",
      "detail": "Build only the tools packages",
      "group": "build"
    },
    {
      "type": "shell",
      "command": "npm run test",
      "problemMatcher": [],
      "label": "turbo-repo:test",
